<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/color_blackDark_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:textSize="22px"
        android:textColor="?attr/textColor_ffffff_333333"
        android:textColorHint="?attr/textColor_ffffff_333333"
        android:id="@+id/et_search"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20px"
        android:paddingRight="50px"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginLeft="46px"
        android:layout_marginTop="8px"
        android:layout_marginRight="46px"
        android:layout_marginBottom="8px"
        android:drawableLeft="?attr/iconKeySelectSearch"
        android:drawablePadding="10px"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56px"
        android:layout_marginRight="46px"/>
    <com.kkkcut.e20j.customView.indexlib.IndexBar.widget.IndexBar
        android:layout_gravity="right"
        android:id="@+id/indexBar"
        android:background="@color/transparent"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:layout_width="46px"
        android:layout_height="match_parent"
        app:indexBarPressBackground="?attr/color_blackDark_gray"
        app:indexBarTextSize="16px"/>
    <TextView
        android:textSize="48px"
        android:textColor="@color/color_1b1a28"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tvSideBarHint"
        android:background="@drawable/shape_side_bar_bg"
        android:visibility="gone"
        android:layout_width="80px"
        android:layout_height="80px"/>
</FrameLayout>
