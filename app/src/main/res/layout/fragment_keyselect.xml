<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:textSize="12dp"
        android:textColor="?attr/textColor_ffffff_333333"
        android:textColorHint="?attr/textColor_ffffff_333333"
        android:id="@+id/et_search"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20px"
        android:paddingRight="50px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="46px"
        android:layout_marginTop="23px"
        android:layout_marginRight="46px"
        android:layout_marginBottom="23px"
        android:hint="请输入搜索内容"
        android:drawableRight="@drawable/search"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category_list"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="80px"/>
        <com.kkkcut.e20j.customView.indexlib.IndexBar.widget.IndexBar
            android:layout_gravity="right"
            android:id="@+id/indexBar"
            android:background="@color/white"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:layout_width="80px"
            android:layout_height="match_parent"
            app:indexBarPressBackground="@color/white"
            app:indexBarTextSize="11dp"/>
        <TextView
            android:textSize="48sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tvSideBarHint"
            android:background="@drawable/shape_side_bar_bg"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </FrameLayout>
</LinearLayout>
