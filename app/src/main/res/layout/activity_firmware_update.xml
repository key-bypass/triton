<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_1b1a28"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="30px"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@color/color_2a2b40"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:text="@string/firmware_upgrade"/>
    <TextView
        android:textSize="24px"
        android:textColor="@color/white"
        android:background="@color/color_2a2b40"
        android:paddingLeft="40px"
        android:paddingTop="20px"
        android:paddingRight="40px"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="80px"
        android:text="@string/please_do_not_turn_off_the_machine_or_quit_the_program_during_the_upgrade_process"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_4b4d62_r10"
        android:layout_width="580px"
        android:layout_height="300px"
        android:layout_marginTop="180px">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:layout_marginTop="60px">
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_version"/>
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:id="@+id/tv_current_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:layout_marginTop="35px">
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_version"/>
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:id="@+id/tv_new_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.0"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="392px"
            android:layout_height="33px"
            android:layout_marginTop="40px">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_progress_firmware"/>
            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@+id/progress"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:layout_marginLeft="15px"
                android:layout_marginTop="1px"
                android:layout_marginRight="15px"
                android:progressDrawable="@drawable/progress_indeterminate_horizontal"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </FrameLayout>
        <TextView
            android:textSize="24px"
            android:textColor="#242226"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
