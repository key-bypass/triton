<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_background"
            android:background="@color/color_daeaf9"
            android:layout_width="match_parent"
            android:layout_height="449px">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:id="@+id/rv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/iv_service"
                android:visibility="visible"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:src="@drawable/icon_service"/>
            <FrameLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="293px"
                android:layout_marginBottom="5px">
                <TextView
                    android:textSize="18px"
                    android:textColor="@color/textcolor_333333"
                    android:id="@+id/tv_soft_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"/>
                <TextView
                    android:textSize="18px"
                    android:textColor="@color/textcolor_333333"
                    android:layout_gravity="center"
                    android:id="@+id/tv_db_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="18px"
                    android:textColor="@color/textcolor_333333"
                    android:layout_gravity="right"
                    android:id="@+id/tv_series"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"/>
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:background="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center_horizontal"
                android:id="@+id/rv_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="250px"
        android:layout_height="match_parent">
        <View
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/language_choice"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/language"/>
        <View
            android:id="@+id/view_devide_language"
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/setting"/>
        <View
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/version_update"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/version_updates"/>
        <View
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/data_update"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/ResUpdate"/>
        <View
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/machine_info"/>
        <View
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/help_center"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/help_center"/>
        <View
            android:background="@color/text_color_666666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
