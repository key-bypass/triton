<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_1b1a28"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ll_width"
                android:background="@color/color_2a2b40"
                android:layout_width="320px"
                android:layout_height="200px"
                android:layout_marginTop="10px"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="18px"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/color_4b4d62"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:text="@string/length"/>
                <ImageView
                    android:id="@+id/iv_width"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:src="@drawable/blank_cut_length"
                    android:scaleType="centerInside"
                    android:layout_weight="1"/>
                <EditText
                    android:textSize="18px"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/et_key_length"
                    android:background="@drawable/bg_input_ff205f"
                    android:layout_width="100px"
                    android:layout_height="50px"
                    android:layout_marginBottom="10px"
                    android:maxLength="5"
                    android:inputType="number"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="22px"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/bt_cut"
            android:background="@drawable/icon_cut"
            android:paddingLeft="60px"
            android:paddingRight="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="3px"
            android:layout_marginRight="40px"
            android:text="@string/cut"/>
    </LinearLayout>
</LinearLayout>
