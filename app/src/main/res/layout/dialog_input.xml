<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_cut_decode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:id="@+id/hs_integer"
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:layout_marginLeft="59px"
            android:layout_marginTop="122px"
            android:layout_marginRight="59px">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_integer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/hs_decimal"
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:layout_marginLeft="59px"
            android:layout_marginTop="40px"
            android:layout_marginRight="59px">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_decimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>
        <GridLayout
            android:id="@+id/gl_keyboard"
            android:background="@color/bg_f4f4f4"
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_marginLeft="59px"
            android:layout_marginTop="40px"
            android:layout_marginRight="59px"/>
        <View
            android:background="@color/devide_e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20px"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="30px">
            <Button
                android:id="@+id/bt_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四舍五入"
                android:textAllCaps="false"/>
            <CheckBox
                android:id="@+id/cb_invert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invert_bitting"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAllCaps="false"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px">
            <Button
                android:textSize="45px"
                android:textColor="@color/white"
                android:id="@+id/bt_cancle"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:textAllCaps="false"/>
            <Button
                android:textSize="45px"
                android:textColor="@color/white"
                android:id="@+id/bt_ok"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1px"
                android:text="@string/ok"
                android:layout_weight="1"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
