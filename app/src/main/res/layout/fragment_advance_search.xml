<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_1b1a28"
    android:padding="20px"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_search_input"
        android:background="@drawable/bg_key_blanks"
        android:padding="10px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="26px"
                android:textColor="@color/white"
                android:id="@+id/tv_title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_type"/>
            <com.kkkcut.e20j.customView.searchSpinner.SearchableSpinner
                android:entries="@array/advance_search_type"
                android:id="@+id/spinner_card"
                android:background="@drawable/spinner_border"
                android:layout_width="400px"
                android:layout_height="50px"
                android:layout_marginTop="5px"
                android:layout_below="@+id/tv_title_card"
                app:hintText="Card/Silca Card/Silca SN"/>
            <TextView
                android:textSize="26px"
                android:textColor="@color/white"
                android:id="@+id/tv_title_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="@string/card_value"
                android:layout_toRightOf="@+id/spinner_card"/>
            <EditText
                android:id="@+id/et_card"
                android:background="@drawable/bg_edit_white_5"
                android:layout_width="400px"
                android:layout_height="50px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@+id/spinner_card"
                android:layout_below="@+id/tv_title_card"/>
            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="60px"
                android:layout_height="50px"
                android:src="@drawable/ic_caret_right"
                android:scaleType="fitEnd"
                android:layout_alignTop="@+id/et_card"
                android:layout_alignRight="@+id/et_card"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">
            <TextView
                android:textSize="26px"
                android:textColor="@color/white"
                android:id="@+id/title_keyblank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/key_blank"/>
            <EditText
                android:id="@+id/et_key_blank"
                android:background="@drawable/bg_edit_white_5"
                android:layout_width="400px"
                android:layout_height="50px"
                android:layout_marginTop="5px"
                android:layout_below="@+id/title_keyblank"/>
            <ImageView
                android:id="@+id/iv_key_blank"
                android:layout_width="60px"
                android:layout_height="50px"
                android:src="@drawable/ic_caret_right"
                android:scaleType="fitEnd"
                android:layout_alignTop="@+id/et_key_blank"
                android:layout_alignRight="@+id/et_key_blank"/>
            <TextView
                android:textSize="26px"
                android:textColor="@color/white"
                android:id="@+id/title_key_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="@string/key_manufacturer"
                android:layout_toRightOf="@+id/et_key_blank"/>
            <com.kkkcut.e20j.customView.searchSpinner.SearchableSpinner
                android:id="@+id/spinner_key_manufacturer"
                android:background="@drawable/spinner_border"
                android:layout_width="400px"
                android:layout_height="50px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@+id/et_key_blank"
                android:layout_below="@+id/title_keyblank"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_key_blanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px">
                <TextView
                    android:textSize="26px"
                    android:textColor="@color/white"
                    android:id="@+id/title_lock_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_manufacturer"/>
                <EditText
                    android:id="@+id/et_lock_manufacturer"
                    android:background="@drawable/bg_edit_white_5"
                    android:layout_width="400px"
                    android:layout_height="50px"
                    android:layout_below="@+id/title_lock_manufacturer"/>
                <ImageView
                    android:id="@+id/iv_lock_manu"
                    android:layout_width="60px"
                    android:layout_height="50px"
                    android:src="@drawable/ic_caret_right"
                    android:scaleType="fitEnd"
                    android:layout_alignTop="@+id/et_lock_manufacturer"
                    android:layout_alignRight="@+id/et_lock_manufacturer"/>
                <TextView
                    android:textSize="26px"
                    android:textColor="@color/white"
                    android:id="@+id/title_lock_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="@string/lock_system"
                    android:layout_toRightOf="@+id/et_lock_manufacturer"/>
                <EditText
                    android:id="@+id/et_lock_system"
                    android:background="@drawable/bg_edit_white_5"
                    android:layout_width="400px"
                    android:layout_height="50px"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/et_lock_manufacturer"
                    android:layout_below="@+id/title_lock_system"/>
                <ImageView
                    android:id="@+id/iv_lock_system"
                    android:layout_width="60px"
                    android:layout_height="50px"
                    android:src="@drawable/ic_caret_right"
                    android:scaleType="fitEnd"
                    android:layout_alignTop="@+id/et_lock_system"
                    android:layout_alignRight="@+id/et_lock_system"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_alignParentBottom="true">
            <Button
                android:textColor="@color/white"
                android:id="@+id/bt_clear"
                android:background="@drawable/bg_button_ff205f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:layout_below="@+id/ll_search_input"
                android:textAllCaps="false"/>
            <Button
                android:textColor="@color/white"
                android:id="@+id/bt_search"
                android:background="@drawable/bg_button_ff205f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200px"
                android:text="@string/search"
                android:layout_below="@+id/ll_search_input"
                android:textAllCaps="false"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
