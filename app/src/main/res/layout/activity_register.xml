<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/color_blackDark_blueLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="30px"
        android:textColor="?attr/textColor_ffffff_333333"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="?attr/color_blackM_white"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:text="@string/registration"/>
    <FrameLayout
        android:background="?attr/color_blackM_white"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="78px"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_container"
        android:background="@drawable/bg_4b4d62_r10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="580px"
        android:layout_height="380px"
        android:layout_marginTop="120px"
        android:transformPivotX="3px"
        android:elevation="3px">
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:layout_width="320px"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:text="@string/serial_number"/>
        <EditText
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:id="@+id/et_sn"
            android:background="@drawable/white"
            android:paddingLeft="10px"
            android:layout_width="320px"
            android:layout_height="48px"
            android:layout_marginTop="15px"
            android:maxLength="10"
            android:inputType="textCapCharacters"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:layout_width="320px"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:text="@string/registration_code"/>
        <EditText
            android:textSize="24px"
            android:textColor="@color/textcolor_333333"
            android:id="@+id/et_regCode"
            android:background="@drawable/white"
            android:paddingLeft="10px"
            android:layout_width="320px"
            android:layout_height="48px"
            android:layout_marginTop="15px"
            android:maxLength="8"
            android:inputType="textCapCharacters"/>
        <Button
            android:textSize="20px"
            android:textColor="@color/white"
            android:id="@+id/bt_activate"
            android:background="@color/color_ff205f"
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_marginTop="30px"
            android:text="@string/ok"/>
    </LinearLayout>
    <TextView
        android:textColor="#000"
        android:layout_gravity="bottom"
        android:id="@+id/tv_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="10px"/>
    <TextView
        android:textColor="#000"
        android:layout_gravity="bottom|right"
        android:id="@+id/tv_cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:layout_marginBottom="10px"/>
</FrameLayout>
