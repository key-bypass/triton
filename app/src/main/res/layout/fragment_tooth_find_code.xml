<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/color_1b1a28"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_2a2b40"
        android:paddingLeft="20px"
        android:paddingTop="40px"
        android:paddingRight="20px"
        android:layout_width="488px"
        android:layout_height="match_parent"
        android:layout_marginTop="10px">
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_input_the_key_bitting_numbers"/>
        <HorizontalScrollView
            android:background="@drawable/bg_4b4d62_r10"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="10px">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_toothcode_container"
                android:paddingLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"/>
        <Button
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bt_search"
            android:background="@drawable/bg_button_ff205f"
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_marginBottom="30px"
            android:text="@string/search"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginRight="60px">
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_tooth"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="@string/bitting"
                android:layout_weight="2"/>
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_code"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="@string/key_code"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tooth_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"/>
    </LinearLayout>
</LinearLayout>
