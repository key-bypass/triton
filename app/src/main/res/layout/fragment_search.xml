<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/color_blackDark_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:textSize="20px"
        android:textColor="?attr/textColor_ffffff_333333"
        android:textColorHint="?attr/textColor_ffffff_333333"
        android:id="@+id/et_search"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20px"
        android:paddingRight="50px"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginLeft="46px"
        android:layout_marginTop="20px"
        android:layout_marginRight="46px"
        android:layout_marginBottom="8px"
        android:hint="@string/enter_search_content"
        android:drawableLeft="?attr/iconKeySelectSearch"
        android:drawablePadding="10px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_key_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24px"
                android:textColor="?attr/color_red_blueDark"
                android:id="@+id/tv_key_blank"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/key_blank"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_key_blank"
                android:background="?attr/color_red_blueDark"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_key_blank"
                android:layout_alignLeft="@+id/tv_key_blank"
                android:layout_alignRight="@+id/tv_key_blank"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_key_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="?attr/textColor_ffffff_333333"
                android:gravity="center"
                android:id="@+id/tv_key_id"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100px"
                android:text="@string/ic_card"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_key_id"
                android:background="?attr/textColor_ffffff_333333"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_key_id"
                android:layout_alignLeft="@+id/tv_key_id"
                android:layout_alignRight="@+id/tv_key_id"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_china_key_num"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="?attr/textColor_ffffff_333333"
                android:id="@+id/tv_china_key_num"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/china_key_number"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_china_key"
                android:background="?attr/textColor_ffffff_333333"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_china_key_num"
                android:layout_alignLeft="@+id/tv_china_key_num"
                android:layout_alignRight="@+id/tv_china_key_num"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_blitz_card"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:id="@+id/tv_blitz_card"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blitz_card"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_blitz_card"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_blitz_card"
                android:layout_alignLeft="@+id/tv_blitz_card"
                android:layout_alignRight="@+id/tv_blitz_card"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_dsd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:id="@+id/tv_dsd"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dsd"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_dsd"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_dsd"
                android:layout_alignLeft="@+id/tv_dsd"
                android:layout_alignRight="@+id/tv_dsd"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_lkp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:id="@+id/tv_lkp"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lkp"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_lkp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_lkp"
                android:layout_alignLeft="@+id/tv_lkp"
                android:layout_alignRight="@+id/tv_lkp"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_silca"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="?attr/textColor_ffffff_333333"
                android:id="@+id/tv_silca"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/silca_card"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_silca"
                android:background="?attr/textColor_ffffff_333333"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_silca"
                android:layout_alignLeft="@+id/tv_silca"
                android:layout_alignRight="@+id/tv_silca"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_bar_code"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px">
            <TextView
                android:textSize="24px"
                android:textColor="?attr/textColor_ffffff_333333"
                android:id="@+id/tv_bar_code"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar Code Scanning"
                android:singleLine="true"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/flag_bar_code"
                android:background="?attr/textColor_ffffff_333333"
                android:layout_width="wrap_content"
                android:layout_height="4px"
                android:layout_below="@+id/tv_bar_code"
                android:layout_alignLeft="@+id/tv_bar_code"
                android:layout_alignRight="@+id/tv_bar_code"/>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"/>
</LinearLayout>
