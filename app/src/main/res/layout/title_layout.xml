<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/color_blackM_white"
    android:layout_width="match_parent"
    android:layout_height="70px"
    android:elevation="5px">
    <TextView
        android:textSize="40px"
        android:textStyle="bold"
        android:textColor="?attr/textColor_ffffff_333333"
        android:gravity="center"
        android:id="@+id/tv_back"
        android:paddingLeft="60px"
        android:paddingRight="100px"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/back"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="40px"
        android:textStyle="bold"
        android:textColor="?attr/textColor_ffffff_333333"
        android:gravity="center"
        android:id="@+id/tv_logo"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:drawablePadding="20px"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="40px"
        android:textColor="?attr/textColor_ffffff_333333"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50px"
            android:src="?attr/icon_home"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@+id/iv_menu"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50px"
            android:src="?attr/icon_message"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50px"
            android:src="?attr/icon_menu"
            android:scaleType="center"
            android:layout_toLeftOf="@+id/iv_message"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>
