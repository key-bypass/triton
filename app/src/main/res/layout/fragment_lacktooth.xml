<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?attr/color_blackDark_blueLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/color_blackM_white"
        android:paddingLeft="20px"
        android:paddingTop="40px"
        android:paddingRight="20px"
        android:layout_width="488px"
        android:layout_height="match_parent"
        android:layout_marginTop="10px">
        <TextView
            android:textSize="24px"
            android:textColor="?attr/textColor_ffffff_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_input_key_bitting_numbers_use_to_replace_missed_bitting"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">
            <HorizontalScrollView
                android:background="@drawable/bg_4b4d62_r10"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_height="40px"
                android:layout_marginRight="10px"
                android:layout_weight="1">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_toothcode_container"
                    android:paddingLeft="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </HorizontalScrollView>
            <TextView
                android:textSize="22px"
                android:textColor="?attr/color_red_blueDark"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/bt_search_offline"
                android:background="@drawable/bg_button_ff205f"
                android:layout_width="200px"
                android:layout_height="50px"
                android:layout_marginRight="40px"
                android:layout_marginBottom="30px"
                android:text="@string/search_offline"
                android:textAllCaps="false"/>
            <Button
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/bt_search"
                android:background="@drawable/bg_button_ff205f"
                android:layout_width="200px"
                android:layout_height="50px"
                android:layout_marginBottom="30px"
                android:text="@string/search_online"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginRight="60px">
            <TextView
                android:textSize="24px"
                android:textColor="?attr/textColor_ffffff_333333"
                android:gravity="center"
                android:id="@+id/tv_tooth"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="@string/bitting"
                android:layout_weight="2"/>
            <TextView
                android:textSize="24px"
                android:textColor="?attr/textColor_ffffff_333333"
                android:gravity="center"
                android:id="@+id/tv_code"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="@string/key_code"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tooth_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"/>
    </LinearLayout>
</LinearLayout>
