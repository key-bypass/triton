<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.kkkcut.e20j.androidquick.autolayout.AutoLinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="500px"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30px"
            android:textColor="@color/textcolor_333333"
            android:gravity="center"
            android:id="@+id/tv_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:text="@string/select_all_potential_cuts"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center_horizontal"
            android:id="@+id/rv_keyboard"
            android:layout_width="450px"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="30px"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_description"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textSize="32px"
            android:textColor="@color/white"
            android:id="@+id/ll_confirm"
            android:background="?attr/color_blackM_blueDark"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:text="@string/ok"/>
    </com.kkkcut.e20j.androidquick.autolayout.AutoLinearLayout>
</FrameLayout>
