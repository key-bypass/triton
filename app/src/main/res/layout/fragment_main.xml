<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="#1b1a28"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="293px"
            android:layout_height="match_parent"
            android:layout_marginTop="4px">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_search"
                    android:background="@color/color_2a2b40"
                    android:layout_width="wrap_content"
                    android:layout_height="66px">
                    <View
                        android:background="@drawable/bg_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"/>
                    <TextView
                        android:textSize="22px"
                        android:textColor="@color/color_cccccc"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search"
                        android:drawableLeft="@drawable/search"
                        android:drawablePadding="10px"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_adv_search"
                    android:background="@color/color_2a2b40"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="66px">
                    <View
                        android:background="@drawable/bg_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"/>
                    <TextView
                        android:textSize="22px"
                        android:textColor="@color/color_cccccc"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_adv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/advanced_search"
                        android:drawableLeft="@drawable/search"
                        android:drawablePadding="10px"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_bar_code"
                android:background="@color/color_2a2b40"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="66px">
                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/scan"/>
                <TextView
                    android:textSize="22px"
                    android:textColor="@color/color_cccccc"
                    android:gravity="center"
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bar Code Scanning"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_extra_funtion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/color_1f2032"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="293px">
            <TextView
                android:textSize="28px"
                android:textColor="@color/white"
                android:id="@+id/tv_title_carkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:text="@string/car_key"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_carkay"
                android:layout_width="wrap_content"
                android:layout_height="160px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="20px"/>
            <TextView
                android:textSize="28px"
                android:textColor="@color/white"
                android:id="@+id/tv_title_house_key"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="25px"
                android:text="@string/house_key"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_housekey"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="160px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="20px"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="293px"
            android:layout_marginBottom="5px">
            <TextView
                android:textSize="18px"
                android:textColor="@color/white"
                android:id="@+id/tv_soft_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"/>
            <TextView
                android:textSize="18px"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_db_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18px"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:id="@+id/tv_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"/>
        </FrameLayout>
    </FrameLayout>
    <com.kkkcut.e20j.androidquick.autolayout.AutoLinearLayout
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="@color/color_2a2b40"
        android:layout_width="250px"
        android:layout_height="match_parent">
        <View
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/language_choice"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/language"/>
        <View
            android:id="@+id/view_devide_language"
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/setting"/>
        <View
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/version_update"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/version_updates"/>
        <View
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/data_update"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/ResUpdate"/>
        <View
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/machine_info"/>
        <View
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/help_center"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="@string/help_center"/>
        <View
            android:background="@color/color_1b1a28"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </com.kkkcut.e20j.androidquick.autolayout.AutoLinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
