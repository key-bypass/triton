<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_key_blanks"
    android:padding="5px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10px">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="172px"
            android:layout_height="80px"
            android:layout_marginLeft="20px"
            android:scaleType="centerInside"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="200px"
            android:layout_height="match_parent">
            <TextView
                android:textSize="26px"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/kid"
                android:layout_weight="1"/>
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_kid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="200px"
            android:layout_height="match_parent">
            <TextView
                android:textSize="26px"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/cuts"
                android:layout_weight="1"/>
            <TextView
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_cuts"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_4b4d62"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px">
        <TextView
            android:textSize="26px"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="Lock system/Series"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="26px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:text="Silca Card"/>
        <TextView
            android:textSize="26px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:text="SN"/>
        <TextView
            android:textSize="26px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:text="Type"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"/>
</LinearLayout>
